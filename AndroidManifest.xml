<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.remoteandroid.test"
      android:versionCode="1"
      android:versionName="1.0"
      android:installLocation="auto"
>
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="11"/>
	<user-feature android:name="android.hardware.nfc" android:required="false"/>
    
	<uses-permission android:name="android.permission.INTERNET" />
 	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	    
    <!-- For NFC -->
    <uses-permission android:name="android.permission.NFC" />
	    
	<!-- For receive discover events -->
	<uses-permission android:name="org.remoteandroid.permission.discover.RECEIVE"/>
	<!-- For read current QRCode -->
	<uses-permission android:name="org.remoteandroid.permission.contentprovider.QRCODE"/>
		
    <!-- TODO: Sherlock theme and Holo theme -->
    <application 
    	android:icon="@drawable/ic_launcher" 
        android:logo="@drawable/ic_launcher"
    	android:label="@string/app_name"
    	android:name="TestRemoteAndroidApplication"
    	android:theme="@style/MyTheme"
    >
		<service 
			android:name="org.remoteandroid.test.TestRemoteAndroidService" 
		>
			<intent-filter>
				<action android:name="org.remoteandroid.test.TestService"/>
			</intent-filter>
		</service>

        <activity android:name=".TestRemoteAndroidActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.SAMPLE_CODE"/>
				<category android:name="android.intent.category.INFO"/>                
            </intent-filter>
        </activity>

        <activity android:name="TestRemoteAndroidPreferenceActivity" android:exported="false"/>

        

    </application>
    
</manifest>